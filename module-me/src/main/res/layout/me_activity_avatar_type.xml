<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWindows">

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_title="@string/me_avatar_type"
        app:tb_rightTextVisible="true"
        app:tb_rightText="@string/btn_confirm"
        app:tb_rightTextColor="@color/blue_0084FF"/>

    <RadioGroup
        android:id="@+id/rg_avatar_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_gap"
        android:paddingLeft="@dimen/dp_20"
        android:paddingRight="@dimen/dp_20"
        android:orientation="vertical"
        android:background="@color/colorWhite">

        <RadioButton
            android:id="@+id/rb_avatar_type_square"
            android:layout_width="match_parent"
            android:layout_height="@dimen/multiCard_height"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@drawable/me_selector_checkbox_bg"
            android:gravity="center_vertical"
            android:text="@string/me_avatar_type_square"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/main_divider" />

        <RadioButton
            android:id="@+id/rb_avatar_type_round_angle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/multiCard_height"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@drawable/me_selector_checkbox_bg"
            android:gravity="center_vertical"
            android:text="@string/me_avatar_type_round_angle"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/main_divider" />

        <RadioButton
            android:id="@+id/rb_avatar_type_circle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/multiCard_height"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@drawable/me_selector_checkbox_bg"
            android:gravity="center_vertical"
            android:text="@string/me_avatar_type_circle"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0.5"
            android:background="@color/main_divider" />

        <RadioButton
            android:id="@+id/rb_avatar_type_circle_V"
            android:layout_width="match_parent"
            android:layout_height="@dimen/multiCard_height"
            android:background="@null"
            android:button="@null"
            android:checked="false"
            android:drawableRight="@drawable/me_selector_checkbox_bg"
            android:gravity="center_vertical"
            android:text="@string/me_avatar_type_circle_V"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/sp_18" />

    </RadioGroup>

</LinearLayout>
