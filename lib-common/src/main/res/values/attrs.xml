    <!-- 轮视图WheelView -->
    <declare-styleable name="Wheel_View">
        <!-- 文本 -->
        <attr name="wv_autoFitTextSize" format="boolean"/>        <!-- 是否自适应文字大小以完全显示过长的文字 -->
        <attr name="wv_textSize" format="dimension"/>             <!-- 未选中文字大小 -->
        <attr name="wv_selectedItemTextSize" format="dimension"/> <!-- 选中文字大小 -->
        <attr name="wv_normalItemTextColor" format="color"/>      <!-- 未选中文字颜色 -->
        <attr name="wv_selectedItemTextColor" format="color"/>    <!-- 被选中的文字颜色 -->
        <attr name="wv_textAlign" format="enum">                  <!-- 文字对齐方式 -->
            <enum name="left" value="0"/>
            <enum name="center" value="1"/>
            <enum name="right" value="2"/>
        </attr>
        <!-- 标签 -->
        <attr name="wv_showLabel" format="boolean"/>              <!-- 是否显示附加标签 -->
        <attr name="wv_labelText" format="string"/>               <!-- 标签文本 -->
        <attr name="wv_labelTextSize" format="dimension"/>        <!-- 标签文本大小 -->
        <attr name="wv_labelTextColor" format="color"/>           <!-- 标签文本字体颜色 -->
        <attr name="wv_maxLength" format="integer"/>              <!-- 标签最大长度 -->
        <!-- 分割线 -->
        <attr name="wv_showDivider" format="boolean"/>              <!-- 是否显示分割线 -->
        <attr name="wv_dividerType" format="enum">                  <!-- 分割线类型 -->
            <enum name="fill" value="0"/>
            <enum name="wrap" value="1"/>
        </attr>
        <attr name="wv_dividerColor" format="color"/>               <!-- 分割线颜色 -->
        <attr name="wv_dividerHeight" format="dimension"/>          <!-- 分割线高度 -->
        <attr name="wv_dividerPaddingForWrap" format="dimension"/>  <!-- wrap类型下分割线内边距 -->
        <!-- 其它属性 -->
        <attr name="wv_textBoundaryMargin" format="dimension"/>  <!-- 文字距离边界的外边距 -->
        <attr name="wv_lineSpacing" format="dimension"/>         <!-- 行间距 -->
        <attr name="wv_visibleItems" format="integer"/>          <!-- 可见item数 -->
        <attr name="wv_cyclic" format="boolean"/>                <!-- 是否循环滚动 -->
        <attr name="wv_selectedItemPosition" format="integer"/>  <!-- 当前选中下标 -->
        <attr name="wv_drawSelectedRect" format="boolean"/>      <!-- 是否绘制选中区域 -->
        <attr name="wv_selectedRectColor" format="color"/>       <!-- 选中区域颜色 -->
        <attr name="wv_integerNeedFormat" format="boolean"/>     <!-- 数据为Integer类型时是否需要转换 -->
        <attr name="wv_integerFormat" format="string"/>          <!-- Integer类型转换格式 -->
    </declare-styleable>

    <!-- 多功能卡片 -->
    <declare-styleable name="MultiCard">
        <!-- 图标 -->
        <attr name="mc_icon" format="reference"/>                  <!-- icon图标 -->
        <!-- 标题 -->
        <attr name="mc_title" format="string"/>                    <!-- 标题 -->
        <attr name="mc_titleTextColor" format="color"/>            <!-- 标题颜色值 -->
        <attr name="mc_titleTextSize" format="dimension"/>         <!-- 标题文本字体大小 -->
        <attr name="mc_hasLetter" format="boolean"/>               <!-- 是否显示第一个字符 -->
        <!-- 标题下面的提示 -->
        <attr name="mc_titleHint" format="string"/>                <!-- 标题提示 -->
        <attr name="mc_titleHintVisible" format="boolean"/>        <!-- 是否显示标题提示 -->
        <!-- 内容 -->
        <attr name="mc_hasContent" format="boolean"/>              <!-- 是否有内容 -->
        <attr name="mc_content" format="string"/>                  <!-- 内容 -->
        <attr name="mc_contentTextColor" format="color"/>          <!-- 内容文本颜色值 -->
        <attr name="mc_contentTextSize" format="dimension"/>       <!-- 内容文本字体大小 -->
        <attr name="mc_contentHint" format="string"/>              <!-- 内容hint -->
        <attr name="mc_contentHintTextColor" format="color"/>      <!-- 内容hint文本颜色值 -->
        <attr name="mc_contentHintTextSize" format="dimension"/>   <!-- 内容hint文本字体大小 -->
        <attr name="mc_isMobile" format="boolean"/>                <!-- 内容是否是手机号 -->
        <attr name="mc_isEdited" format="boolean"/>                <!-- 内容是否可编辑 -->
        <attr name="mc_alignRight" format="boolean"/>              <!-- 内容是否右对齐 -->
        <!-- 右箭头 -->
        <attr name="mc_hasArrow" format="boolean"/>                <!-- 是否有箭头 -->
        <attr name="mc_arrowIcon" format="reference"/>             <!-- 箭头icon图标 -->
        <!-- 分割线 -->
        <attr name="mc_hasDivider" format="boolean"/>              <!-- 是否有间隔线 -->
        <attr name="mc_dividerColor" format="color"/>              <!-- 内容文本颜色值 -->
        <attr name="mc_dividerHeight" format="dimension"/>         <!-- 分割线高度 -->
        <attr name="mc_dividerMarginLeft" format="dimension"/>     <!-- 分割线左margin -->
        <attr name="mc_dividerMarginRight" format="dimension"/>    <!-- 分割线右margin -->
    </declare-styleable>

