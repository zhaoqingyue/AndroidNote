<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWindows">

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_title="标题"
        app:tb_bgColor="@color/colorBar"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_titleTextColor="@color/colorWhite"
        app:tb_bgColor="@color/colorBar"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_leftIcon="@mipmap/icon_arrow_back"
        app:tb_title="标题"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_leftText="返回"
        app:tb_leftTextVisible="true"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_leftText="返回"
        app:tb_leftTextColor="@color/blue_0084FF"
        app:tb_leftTextVisible="true"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_leftIconVisible="false"
        app:tb_leftText="返回"
        app:tb_leftTextColor="@color/blue_0084FF"
        app:tb_leftTextVisible="true"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_rightText="提交"
        app:tb_rightTextColor="@color/blue_0084FF"
        app:tb_rightTextVisible="true"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_rightIconVisible="true"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_rightIcon="@mipmap/icon_menu"
        app:tb_rightIconVisible="true"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_rightIcon="@mipmap/icon_menu"
        app:tb_rightIconVisible="true"
        app:tb_bottomDividerVisible="true"/>

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_5"
        app:tb_title="标题"
        app:tb_rightIcon="@mipmap/icon_menu"
        app:tb_rightIconVisible="true"
        app:tb_bottomDividerVisible="true"
        app:tb_bottomDividerColor="@color/colorAccent"/>


</LinearLayout>
