<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWindows">

    <com.study.commonlib.ui.view.TopBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tb_title="@string/note_picker_embedded"
        app:tb_rightTextVisible="true"
        app:tb_rightText="@string/note_plate"
        app:tb_rightTextColor="@color/blue_0084FF"/>

    <TextView
        android:id="@+id/tv_selected_nation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/sp_16"
        android:textColor="@color/blue_0084FF"
        android:background="@color/gray_9b9b9b"/>

    <com.study.pickerlib.widget.WheelListView
        android:id="@+id/wheelListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_selected_car_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/sp_16"
        android:textColor="@color/blue_0084FF"
        android:background="@color/gray_9b9b9b"/>

    <LinearLayout
        android:id="@+id/wheelViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:orientation="vertical"/>

</LinearLayout>
