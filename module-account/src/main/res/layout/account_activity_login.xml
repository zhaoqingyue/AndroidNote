<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindows"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_55"
        android:paddingBottom="@dimen/dp_25"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            android:gravity="center"
            android:textStyle="bold"
            android:text="NOTE"
            android:textSize="@dimen/sp_36"
            android:textColor="@color/account_colorLogo"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:background="@drawable/account_shape_circle_bg"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="AndroidNote"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/account_colorLogo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="zhao.qingyue.cn"
            android:textSize="@dimen/sp_30"
            android:textColor="@color/account_colorLogo"
            android:visibility="gone"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="@dimen/dp_40"
        android:paddingRight="@dimen/dp_40">

        <!-- 手机登录 -->
        <include
            android:id="@+id/layout_login_mobile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/account_layout_login_mobile"
            android:visibility="visible" />

        <!-- 帐号登录 -->
        <include
            android:id="@+id/layout_login_account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/account_layout_login_account"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:paddingLeft="@dimen/dp_40"
        android:paddingRight="@dimen/dp_40"
        android:paddingTop="@dimen/dp_40"
        android:paddingBottom="@dimen/dp_40"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorDivider"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"
                android:text="@string/account_third_login"
                android:textColor="@color/colorDivider"
                android:textSize="@dimen/sp_16"/>

            <View
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:background="@color/colorDivider"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_weixin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/account_third_weixin"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_qq"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/account_third_qq"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_weibo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/account_third_weibo"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>